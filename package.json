  "author": "Jacky Wang <zwang@flexport.com>",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@parcel/packager-raw-url": "2.4.1",
    "@parcel/transformer-sass": "2.4.1",
    "@parcel/transformer-webmanifest": "2.4.1",
    "@types/cheerio": "^0.22.31",
    "@types/colors": "^1.2.1",
    "@types/fs-extra": "^9.0.13",
    "@types/puppeteer": "^5.4.6",
    "assert": "^2.0.0",
    "axios": "^0.27.0",
    "browserify-zlib": "^0.2.0",
    "cheerio": "^1.0.0-rc.10",
    "colors": "^1.4.0",
    "constants-browserify": "^1.0.0",
    "events": "^3.3.0",
    "fs-extra": "^10.1.0",
    "gh-pages": "^3.2.3",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "parcel": "^2.4.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "puppeteer": "^13.6.0",
    "querystring-es3": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "typescript": "^4.6.3",
    "url": "^0.11.0",
    "util": "^0.12.4",
    "workbox-cli": "^6.5.3"
  },
  "dependencies": {
    "chart.js": "^3.7.1",
    "history": "^5.3.0",
    "preact": "^10.7.1",
    "preact-router": "^4.0.1",
    "python-shell": "^3.0.1"
  },
  "scripts": {
    "ensure:dist": "mkdir -p dist",
    "generate:data:index": "node scripts/run-python-script.js && node scripts/generate-data-index.js",
    "copy:data": "yarn generate:data:index && cp -R data/ dist/data/",
    "build": "yarn ensure:dist && yarn copy:data && parcel build --no-cache --no-source-maps --dist-dir=dist frontend/index.html && yarn workbox generateSW workbox-config.js ",
    "serve": "yarn ensure:dist && yarn copy:data && parcel serve --no-cache --no-source-maps frontend/index.html && yarn workbox generateSW workbox-config.js ",
    "watch": "yarn copy:data && parcel watch --no-source-maps frontend/index.html",
    "deploy": "rm -rf ./dist && mkdir dist && yarn build && cp CNAME dist/CNAME && gh-pages --dist dist",
    "build:backend": "yarn tsc --project tsconfig.backend.json",
    "run:backend": "node backend-dist/index.js",
    "backend": "yarn build:backend && yarn run:backend"
  }
}
